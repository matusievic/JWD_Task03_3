<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">

    <display-name>JWD Task 3.3</display-name>

    <servlet>
        <servlet-name>IndexPage</servlet-name>
        <jsp-file>/WEB-INF/jsp/index.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>IndexPage</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ResultPage</servlet-name>
        <jsp-file>/WEB-INF/jsp/result.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>ResultPage</servlet-name>
        <url-pattern>/result</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>xmlController</servlet-name>
        <servlet-class>by.tc.controller.XMLController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>xmlController</servlet-name>
        <url-pattern>/controller</url-pattern>
    </servlet-mapping>


</web-app>
